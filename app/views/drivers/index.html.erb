<p id="notice"><%= notice %></p>

<h1>Motoristas</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>Endereço</th>
      <th>Fone</th>
      <th>Cidade</th>
      <th>Observações</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @drivers.each do |driver| %>
      <tr>
        <td><%= driver.sname %></td>
        <td><%= driver.email %></td>
        <td><%= driver.address %></td>
        <td><%= driver.phone %></td>
        <td><%= driver.city %></td>
        <td><%= driver.comments %></td>
        <td><%= link_to 'Mostra', driver %></td>
        <td><%= link_to 'Edita', edit_driver_path(driver) %></td>
        <td><%= link_to 'Exclui', driver, method: :delete, data: { confirm: 'Tem Certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

