<p id="notice"><%= notice %></p>

<h1>Destinations</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Distancia/Km</th>
      <th>Valor</th>
      <th>Valor CHD</th>
      <th>NET</th>
      <th>NETC HD</th>
      <th>Cartão</th>
      <th>Cartão CHD</th>
      <th>UF</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @destinations.each do |destination| %>
      <tr>
        <td><%= destination.description %></td>
        <td><%= destination.distance %></td>
        <td><%= destination.valuenormal %></td>
        <td><%= destination.valuenormalchd %></td>
        <td><%= destination.valuenet %></td>
        <td><%= destination.valuenetchd %></td>
        <td><%= destination.valuecard %></td>
        <td><%= destination.valuecardchd %></td>
        <td><%= destination.state.uf %></td>
        <td><%= link_to 'Show', destination %></td>
        <td><%= link_to 'Edit', edit_destination_path(destination) %></td>
        <td><%= link_to 'Destroy', destination, method: :delete, data: { confirm: 'Tem Certeza ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

