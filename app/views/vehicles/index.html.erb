<p id="notice"><%= notice %></p>

<h1>Veículos</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Placas</th>
      <th>Marca</th>
      <th>Modelo</th>
      <th>Ano</th>
      <th>Cor</th>
      <th>Cidade</th>
      <th>UF</th>
      <th>Observações</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.license %></td>
        <td><%= vehicle.brand %></td>
        <td><%= vehicle.smodel %></td>
        <td><%= vehicle.year %></td>
        <td><%= vehicle.color %></td>
        <td><%= vehicle.city %></td>
        <td><%= vehicle.state.uf %></td>
        <td><%= vehicle.comments %></td>
        <td><%= link_to 'Mostra', vehicle %></td>
        <td><%= link_to 'Edita', edit_vehicle_path(vehicle) %></td>
        <td><%= link_to 'Exclui', vehicle, method: :delete, data: { confirm: 'Tem Certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

