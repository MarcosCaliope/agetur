<p id="notice"><%= notice %></p>
<style type="text/css">
      @media print {  
      .print {
        display: block;
      }
      .no-print {
        display: none;
      }
  }  
  </style>

  <div class="no-print">
    
  <%= search_form_for @q do |f| %>
    <%= f.label :created_at_gteq, "Data Inicial:" %>
    <%= f.date_field :created_at_gteq %>
    <%= f.label :created_at_lteq, "Data Final:" %>
    <%= f.date_field :created_at_lteq %>

    <%= f.collection_select :vendor_id_eq, Vendor.all, :id, :sname, include_blank: true %>
    <%= f.label :vendor_id_eq, "Vendedor" %>
    <%= f.submit %>
  <% end %>
</div>

<h5>Comissões no Período</h5>

<table>
  <thead>
    <tr>
      <th>Ordem</th>
      <th>Vendedor</th>
      <th>Passageiro</th>
      <th>Hotel</th>
      <th>Valor</th>
      <th>Comissão</th>
      <th>Recebido</th>
      <th>Receber</th>
      <th>Data</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sorder_items.each do |sorder_item| %>
      <tr>
        <td><%= sorder_item.sorder_id %></td>
        <td><%= sorder_item.vendor.sname %></td>
        <td><%= sorder_item.snomepax %></td>
        <td><%= sorder_item.hotel.sname %></td>
        <td><%= sorder_item.amount %></td>
        <td><%= sorder_item.amountcomission %></td>
        <td><%= sorder_item.amountcomissionpay %></td>
        <td><%= sorder_item.total_receber %></td>
        <td><%= sorder_item.created_at.strftime("%d/%m/%Y") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
